<!-- Mobile Menu Begin -->
<section class="tcm-mobile-menu js-mobile-menu">
    <header class="tcm-mobile-menu__header">
        <h3 class="tcm-mobile-menu__header-title">Menu</h3>
        <button class="tcm-mobile-menu__close-button js-mobile-menu-close-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
            </svg>
        </button>
    </header>
    <nav class="tcm-mobile-menu__navigation">
        <ul class="tcm-mobile-menu__navigation-list">
            {% for menu_info in main_navigation %}
                {% if menu_info[3] is defined %}
                <li class="tcm-mobile-menu__navigation-item tcm-mobile-menu__navigation-item--dropdown js-mobile-menu-dropdown">
                    <h3 class="tcm-mobile-menu__dropdown-title">{{ menu_info[0] }}</h3>
                    <div class="tcm-mobile-menu__dropdown">
                        <nav class="tcm-mobile-menu__dropdown-navigation">
                            <ul class="tcm-mobile-menu__dropdown-nav-list">
                                {% for sub_menu in menu_info[3] %}
                                    <li class="tcm-mobile-menu__dropdown-nav-item">
                                        <a href="{{ sub_menu[1] }}">{{ sub_menu[0]}}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </nav>
                    </div>
                </li>
                {% else %}
                    <li class="tcm-mobile-menu__navigation-item">
                        <a href="{{ menu_info[1] }}">{{ menu_info[0] }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </nav>
</section>
<!-- Mobile Menu End-->