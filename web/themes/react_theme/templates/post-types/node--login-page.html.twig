
{% set front_path = [ url('<front>')|render|trim('/', 'right'), active_theme_path(),]|join('/') %}
{% set form_path = path('<front>') ~ 'login' %}

<!-- Login Section Begin -->
<section class="tcm-page-form-container">
    <!-- Form Begin -->


    <form 
        class="user-login-form tcm-page-form js-tcm-page-form" 
        id="user-login-form" 
        data-drupal-selector="user-login-form" 
        action="{{ form_path }}" 
        method="post" 
        accept-charset="UTF-8"
    >
        <div class="tcm-page-form-heading">
            <h1 class="tcm-page-form-heading__title">{{ content.field_lp_form_title.0 }} </h1>
            <h2 class="tcm-page-form-heading__subtitle">{{ content.field_lp_form_subtitle.0 }}</h2>
        </div>

        <!-- Email -->
        <div class="tcm-page-form__input-row-wrapper js-form-item form-item js-form-type-textfield form-item-name js-form-item-name">
            <div class="tcm-page-form__single-input-container">
                <label for="edit-name" class="tcm-page-form__input-label js-form-required form-required">
                    <input 
                    class="form-text tcm-page-form__input js-tcm-page-form-input " 
                    id="edit-name" 
                    autocorrect="none" 
                    autocapitalize="none" 
                    spellcheck="false" 
                    autofocus="autofocus" 
                    autocomplete="username" 
                    data-drupal-selector="edit-name" 
                    aria-describedby="edit-name--description" 
                    type="text" 
                    name="name" 
                    value="" 
                    size="60" 
                    maxlength="60"  
                    required="required" 
                    aria-required="true"
                    placeholder="{{ content.field_lp_email.0 }}"
                >
                </label>
                <p class="tcm-page-form__validation-error tcm-hidden">{{ content.field_lp_email_error.0 }}</p>
            </div>
        </div>

        <!-- Password -->
        <div class="tcm-page-form__input-row-wrapper">
            <div class="tcm-page-form__single-input-container js-form-item form-item js-form-type-password form-item-pass js-form-item-pass">
                <label for="edit-pass" class="tcm-page-form__input-label">
                    <input 
                        class="form-text required tcm-page-form__input tcm-page-form__input--password js-tcm-page-form-input js-tcm-password-input"
                        id="edit-pass" 
                        autocomplete="current-password" 
                        data-drupal-selector="edit-pass" 
                        aria-describedby="edit-pass--description" 
                        type="password"
                        name="pass" 
                        size="60" 
                        maxlength="128" 
                        required="required" 
                        aria-required="true"
			placeholder="{{ content.field_lp_password.0 }}"
                    >
                    <div class="tcm-page-form__toggle-password-btn js-toggle-password-btn">
                        <img src="{{ front_path }}/assets/icons/small/closed-eye-icon.svg" class="eye-closed" alt="eye icon">
                        <img src="{{ front_path }}/assets/icons/small/eye-icon.svg" class="eye-open" alt="eye icon">
                    </div>
                </label>
                <p class="tcm-page-form__validation-error tcm-hidden">{{ content.field_lp_password_error.0 }}</p>
            </div>
        </div>

        <!-- Hidden fields -->
        <input autocomplete="off" data-drupal-selector="form-xl8c5tn6lf6cto7vt778cfv5tohifm3gz8c6biaf87g" type="hidden" name="form_build_id" value="form-XL8c5tN6Lf6cTo7vt778cfV5toHIfM3GZ8C6BiAF87g">
        <input data-drupal-selector="edit-user-login-form" type="hidden" name="form_id" value="user_login_form">

        <div data-drupal-selector="edit-actions" class="form-actions js-form-wrapper form-wrapper" id="edit-actions">
            <button  
                class="tcm-page-form__submit-button js-tcm-page-form-submit-button js-form-submit form-submit"
                data-drupal-selector="edit-submit"
                name="op"
                type="submit"
            >
            {{ content.field_lp_login_btn.0 }}
            </button>
        </div>
        <a href="{{ content.field_lp_forgot_password_link.0['#url'] }}" class="tcm-page-form__forgotten-pass-link">{{ content.field_lp_forgot_password_link.0['#title'] }}</a>
    </form>
    <!-- Form End -->

    <!-- Registration Redirect -->
    <section class="tcm-register-cta">
        <h3 class="tcm-register-cta__title">{{ content.field_lp_register_title.0 }}</h3>
        <div class="tcm-register-cta__text">
            <p>{{ content.field_lp_register_text.0 }}</p>
        </div>
        <a href="{{ content.field_lp_registartion_link.0['#url'] }}" class="tcm-register-cta__cta-button">{{ content.field_lp_registartion_link.0['#title'] }}</a>
    </section>
</section>
<!-- Login Section End -->

